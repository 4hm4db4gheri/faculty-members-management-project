{
  "name": "faculty-members-management-project",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "serve": "npx serve dist -p 3000",
    "serve:py": "python -m http.server 3000 --directory dist",
    "docker:build": "docker build -f Dockerfile.prod -t faculty-dashboard .",
    "docker:run": "docker run -d -p 3000:80 --name faculty-app faculty-dashboard",
    "docker:up": "docker compose up -d",
    "docker:down": "docker compose down",
    "docker:simple": "npm run build && docker compose --profile simple up -d",
    "deploy:build": "npm run build && echo Build completed! Files ready in dist/ folder",
    "deploy:local": "npm run build && npm run serve"
  },
  "dependencies": {
    "@headlessui/react": "^2.2.2",
    "@heroicons/react": "^2.2.0",
    "@tailwindcss/vite": "^4.1.4",
    "chart.js": "^4.4.9",
    "framer-motion": "^12.12.1",
    "jspdf": "^3.0.1",
    "react": "^19.0.0",
    "react-chartjs-2": "^5.3.0",
    "react-dom": "^19.0.0",
    "react-hot-toast": "^2.5.2",
    "react-router-dom": "^7.5.2",
    "react-toastify": "^11.0.5",
    "recharts": "^2.15.3",
    "sass": "^1.86.3",
    "tailwindcss": "^4.1.4",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@eslint/js": "^9.21.0",
    "@types/react": "^19.0.10",
    "@types/react-dom": "^19.0.4",
    "@vitejs/plugin-react": "^4.3.4",
    "eslint": "^9.21.0",
    "eslint-plugin-react-hooks": "^5.1.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "globals": "^15.15.0",
    "prettier": "^3.5.3",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "sass-embedded": "^1.86.3",
    "tailwind-scrollbar": "^4.0.2",
    "typescript": "~5.7.2",
    "typescript-eslint": "^8.24.1",
    "vite": "^6.2.0"
  }
}
